<?xml version="1.0" encoding="utf-8"?>
<kv:SmartRender xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:kv="kiwi.guieditor.view.*">
    <fx:Script>
        import kiwi.guieditor.model.format.BooleanFormat;
        import kiwi.guieditor.model.format.DoubleFormat;
        import kiwi.guieditor.model.format.IntFormat;
        import kiwi.guieditor.model.format.StringFormat;

        override protected function update():void {
            if (_data == null) {
                currentState = 'def';
            } else if (_data.format is IntFormat) {
                currentState = 'stepper';
            } else if (_data.format is DoubleFormat) {
                currentState = 'input';
            } else if (_data.format is StringFormat) {
                currentState = 'input';
            } else if (_data.format is BooleanFormat) {
                currentState = 'boolean';
            } else {
                throw new Error("不认识的类型");
            }
        }
    </fx:Script>
</kv:SmartRender>
